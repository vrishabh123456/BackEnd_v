function LongestWord(str) { 
   let words = str.split(' '); 
   let longest = ''; 
  
   for (let i = 0; i < words.length; i++) { 
     if (words[i].length > longest.length) { 
       longest = words[i]; 
     } 
   } 
  
   return longest; 
 } 
  
 let inputString = 'Web Development Tutorial'; 
 let longest = LongestWord(inputString); 
 console.log(longest);  
